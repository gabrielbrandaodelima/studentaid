<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="ratingBarStyleSmall">true</item>
    </style>
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <!-- Customize your theme here. -->

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressTint">@color/colorYellow</item>
        <item name="android:secondaryProgressTint">@color/colorYellow</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">false</item>

    </style>

    <style name="TextViewSimple" parent="TextAppearance.AppCompat" >

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="NavigationDrawerStyleSmall">
        <item name="android:textSize">14sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">46dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">46dp</item><!-- item size in menu-->
    </style>
</resources>