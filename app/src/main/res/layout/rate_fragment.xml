<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/title_rating_question"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <RatingBar
        android:id="@+id/rate_starrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:numStars="5"
        android:progressBackgroundTint="#B9B9B9"
        android:progressTint="#FFCA40"
        android:secondaryProgressTint="#FFCA40"
        android:stepSize="1.0" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/border_box">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rate_review_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="9dp"
            android:background="@android:color/transparent"
            android:gravity="start|top"
            android:hint="@string/text_obs"
            android:textColor="@color/colorBlack"
            android:textColorHint="#B9B9B9"
            android:textSize="15sp" />
    </FrameLayout>

    <Button
        android:id="@+id/rate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="Avaliar"
        android:textAllCaps="false"
        android:textSize="20sp" />

</LinearLayout>